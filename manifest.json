{
  "manifest_version": 3,
  "name": "Webflow Attribute Editor",
  "version": "1.0",
  "description": "Visual attribute editor for Webflow. Edit attributes in a sleek modal with instant updates in the Designer.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*.webflow.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.webflow.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/Attribute-Editor-16.png",
    "19": "icons/Attribute-Editor-19.png",
    "32": "icons/Attribute-Editor-32.png",
    "38": "icons/Attribute-Editor-38.png",
    "48": "icons/Attribute-Editor-48.png",
    "128": "icons/Attribute-Editor-124.png"
  }
}
